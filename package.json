{
    "name": "nodejs-demo-app",
    "version": "1.0.0",
    "description": "NodeJs demo app",
    "main": "index.js",
    "scripts": {
        "start": "node --inspect=5858 -r ts-node/register ./src/server.ts",
        "start:watch": "nodemon",
        "build": "tsc",
        "lint": "eslint ./src/*.*"
    },
    "keywords": [
        "NodeJS",
        "Express",
        "API"
    ],
    "author": "Robert Grabi≈Ñski",
    "license": "ISC",
    "dependencies": {
        "@types/express": "^4.17.1",
        "eslint-config-standard": "^14.1.0",
        "express": "^4.17.1"
    },
    "devDependencies": {
        "@types/node": "^12.11.7",
        "@typescript-eslint/eslint-plugin": "^2.5.0",
        "@typescript-eslint/parser": "^2.5.0",
        "eslint": "^6.6.0",
        "eslint-plugin-import": "^2.18.2",
        "nodemon": "^1.19.4",
        "ts-node": "^8.4.1",
        "typescript": "^3.6.4"
    },
    "nodemonConfig": {
        "ignore": [
            "**/*.test.ts",
            "**/*.spec.ts",
            ".git",
            "node_modules"
        ],
        "watch": [
            "src"
        ],
        "exec": "npm start",
        "ext": "ts"
    }
}
